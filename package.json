{
  "name": "doorcode",
  "scripts": {
    "start": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
    "dev": "npm-run-all --parallel start playground",
    "debug": "dotenv -- nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
    "playground": "graphql playground",
    "build": "rimraf dist && tsc",
    "lint": "tslint --fix --project tsconfig.json {src,test}/**/*.ts",
    "format": "prettier --config './.prettierrc.yaml' --ignore-path './.prettierignore' --write './**/*.{js,ts,graphql,gql,json}'",
    "precommit": "pretty-quick --staged && yarn run lint",
    "deploy": "now --public --dotenv .env --npm && now alias && now rm --yes --safe doorcode",
    "now-start": "node dist"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "graphql-yoga": "1.7.0",
    "jsonwebtoken": "^8.2.0",
    "moment": "^2.21.0",
    "prisma-binding": "1.5.16",
    "ramda": "^0.25.0",
    "uuid": "^3.2.1",
    "validate.js": "^0.12.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.1",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/moment": "^2.13.0",
    "@types/node": "^9.6.0",
    "@types/ramda": "^0.25.21",
    "@types/uuid": "^3.4.3",
    "@types/validate.js": "^0.11.0",
    "dotenv-cli": "1.4.0",
    "graphql-cli": "2.15.8",
    "husky": "^0.14.3",
    "nodemon": "1.17.2",
    "npm-run-all": "4.1.2",
    "prettier": "^1.11.1",
    "pretty-quick": "^1.4.1",
    "prisma": "1.5.0",
    "prisma-cli": "^1.0.7",
    "rimraf": "2.6.2",
    "ts-node": "4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "2.8.1"
  },
  "now": {
        "alias": "doorcode"
    }
}
